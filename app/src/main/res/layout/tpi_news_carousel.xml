<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="175dp">

        <com.yongf.smartbeijing.view.InterceptScrollViewPager
            android:id="@+id/vp_tpi_news_carousel"
            android:layout_width="fill_parent"
            android:layout_height="175dp"></com.yongf.smartbeijing.view.InterceptScrollViewPager>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#66000000">

            <TextView
                android:id="@+id/tv_tpi_news_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dip"
                android:text="相约魔都上海" />

            <LinearLayout
                android:id="@+id/ll_tpi_news_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:paddingRight="8dip"></LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
